<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net10.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Platforms>AnyCPU</Platforms>
        <AssemblyName>nbt2snbt</AssemblyName>
    </PropertyGroup>
    
    <ItemGroup>
        <ProjectReference Include="../meth/Meth.csproj"/>
    </ItemGroup>
    
    <Import Project="../NetBeauty.targets" />

    <PropertyGroup>
        <PublishDir>../publish/libs</PublishDir>
    </PropertyGroup>

    <PropertyGroup>
        <BeautyLibsDir Condition="$(BeautySharedRuntimeMode) == 'True'">../libs</BeautyLibsDir>
        <BeautyLibsDir Condition="$(BeautySharedRuntimeMode) != 'True'">../libs</BeautyLibsDir>
    </PropertyGroup>

    <PropertyGroup>
        <BeautyDir>.</BeautyDir>
        <BeautyAppHostEntry>libs/nbt2snbt.dll</BeautyAppHostEntry>
        <BeautyAppHostDir>..</BeautyAppHostDir>
    </PropertyGroup>

</Project>
