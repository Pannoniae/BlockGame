<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <AssemblyName>BlockGame</AssemblyName>
        <TargetFramework>net10.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <LangVersion>preview</LangVersion>
        <AnalysisLevel>preview-recommended</AnalysisLevel>
        <InvariantGlobalization>true</InvariantGlobalization>
        <Configurations>Debug;Release;Analyzers (WILL BREAK) Release;Analyzers (WILL BREAK) Debug</Configurations>
        <Platforms>AnyCPU</Platforms>
        <ApplicationManifest>..\..\app.manifest</ApplicationManifest>
        <OutputPath>..\..\bin\$(Configuration)\</OutputPath>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DebugSymbols>true</DebugSymbols>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\client\Client.csproj" />
    </ItemGroup>

    <Import Project="..\..\NetBeauty.targets" />

    <PropertyGroup>
        <PublishDir>..\..\publish</PublishDir>
    </PropertyGroup>

    <PropertyGroup>
        <BeautyDir>.</BeautyDir>
        <BeautyLibsDir>libs</BeautyLibsDir>
        <BeautyAppHostEntry>BlockGame.dll</BeautyAppHostEntry>
        <BeautyAppHostDir>.</BeautyAppHostDir>
    </PropertyGroup>

</Project>