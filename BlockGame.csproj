    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="lib\FontStashSharp.Base\FontStashSharp.Base.csproj"/>
        <ProjectReference Include="lib\FontStashSharp\FontStashSharp.csproj"/>
    </ItemGroup>

    <ItemGroup>
