    <ItemGroup>
      <Compile Remove="lib\FontStashSharp\**" />
      <Compile Remove="lib\FontStashSharp.Base\**" />
      <Compile Remove="lib\FontStashSharp.Rasterizers.FreeType\**" />
      <Compile Remove="lib\FontStashSharp.Rasterizers.StbTrueTypeSharp\**" />
      <Compile Remove="lib\FontStashSharp.Rasterizers.SixLabors.Fonts\**" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Remove="lib\FontStashSharp\**" />
      <EmbeddedResource Remove="lib\FontStashSharp.Base\**" />
      <EmbeddedResource Remove="lib\FontStashSharp.Rasterizers.FreeType\**" />
      <EmbeddedResource Remove="lib\FontStashSharp.Rasterizers.StbTrueTypeSharp\**" />
